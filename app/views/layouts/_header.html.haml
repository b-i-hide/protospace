.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to image_tag('logo.png',alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px"), '/', class: 'navbar-brand'
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            =link_to "#{current_user.name}", aria: { expanded: false }, data: { toggle: "dropdown" }, role: "button", href: '#', class: 'dropdown-toggle'
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to 'Profile edit',  edit_user_password_path
              %li
                = link_to 'Logout', destroy_user_session_path, method: 'delete'
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'New Proto', prototypes_new_path
        - else
          %li
          .btn.btn-primary.navbar-btn
            = link_to 'Get Started', new_user_session_path
