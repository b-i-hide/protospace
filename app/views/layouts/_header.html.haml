.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to href: '/', class: 'navbar-brand' do
      = image_tag("logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px")
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            =link_to 'UserName', aria: { expanded: false }, data: { toggle: "dropdown" }, role: "button", href: '#', class: 'dropdown-toggle'
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to 'Profile edit', href: '#'
              %li
                = link_to 'Logout', href: '#'
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'New Proto', href: '/prototypes/new'
        - else
          %li
          .btn.btn-primary.navbar-btn
            = link_to 'Get Started', href: '/login'
