%form.container.user-new{action: ""}
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              .field
                = f.label :name
                %br
                = f.text_field :name, placeholder: "Name", autofocus: true
            .user-image.col-md-2
              .btn.btn-primary
                =button_tag
                Add image
                = f.file_field :avatar
          .user-email
            = f.label :email
            %br
            = f.email_field :email, placeholder: "E-Mail"
          .user-password
            = f.label :password
            - if @minimum_password_length
            %em
              = @minimum_password_length
                "characters minimum"
              %br
              = f.password_field :password, placeholder: "Password", autocomplete: "off"
              = f.label :password_confirmation
              %br
              = f.password_field :password_confirmation, autocomplete: "off"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.label :group
              %br
              = f.text_field :group, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.label :profile
              %br
              = f.text_area :profile, name: "textarea", cols: "30", rows: "4", placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.label :work
              %br
              = f.text_area :works, name: "textarea", cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        .btn.btn-lg.btn-primary.btn-block
          = f.button
      .actions
        = f.submit "Sign up"
  = render "devise/shared/links"
