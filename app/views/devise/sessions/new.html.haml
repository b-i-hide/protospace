.container
  %form.form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.form-signin-heading
      Please sign in
    .field.sr-only
      = f.label :email, for: "inputEmail"
        Email address
      #inputEmail.form-control
        = f.email_field :email, autofocus: true, placeholder: "Email address", required: ""
    .field.sr-only
      = f.label :password_field, for: "inputPassword"
        Password
      #inputPassword.form-control
        = f.password_field :password, placeholder: "Password", required: ""
    .checkbox
      .field
        - if devise_mapping.rememberable?
        = f.checkbox :remember_me, value: "remember-me"
        = f.label :remember_me
          Remember me
    = button_tag.btn.btn-lg.btn-primary.btn-block
      .actions
        = f.submit
          Sign in
  .text-center
    %p
      Not a member?
      = link_to href: "/users/sign_in"
        Sign up now
