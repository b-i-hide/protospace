.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.main_image.image), prototype_path(prototype)
    .caption
      %h3
        = prototype.name
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}", user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
      %ul.proto-tag-list.list-inline
        %li
          = render partial: 'tag', collection: prototype.tags
