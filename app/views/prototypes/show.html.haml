.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to image_tag(@user.avatar, alt: '64x64', size: "64x64", class: 'media-object' ), user_path(@user)
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.name
          .proto-user
            = link_to "by #{@user.name}", user_path(@user)
            %span.degree we-b inc. Designer

    .col-md-6.text-right
      #like-buttons
        = render partial: 'prototypes/like', locals: { prototype: @prototype, like: @like}
    - if user_signed_in? && (current_user.id == @user.id)
      .col-md-6.text-right
        %ul.nav.navbar-nav.navbar-right.pull-right.nav-pills
          %li.dropdown
            =link_to '#', aria: { expanded: true }, data: { toggle: "dropdown" }, role: "button", class: 'dropdown-toggle' do
              = @prototype.name
              %span.caret
            %ul.dropdown-menu{ role: 'menu'}
              %li
                = link_to "Edit #{@prototype.name}", edit_prototype_path
              %li
                = link_to "Delete #{@prototype.name}", prototype_path, method: :delete

  .row
    .col-md-9
      = image_tag(@prototype.main_image.image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @sub_images.each do |sub_image|
          %li.list-group-item
            = image_tag(sub_image.image, class: 'img-responsive')

  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num.js-comments-count
        = @comments.length
    .col-md-8
      .media
        = render partial: 'prototypes/comment', collection: @comments, locals: {comments: @comments}
      %form.form-inline
        = form_for @comment, remote: true do |f|
          = f.hidden_field :user_id, value: "#{current_user.id}"
          %h4 Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :comment, placeholder: 'Your comments', rows: "3"
            .form-group.col-md-2
              = f.submit value: 'Comment', class: 'btn btn-primary'
